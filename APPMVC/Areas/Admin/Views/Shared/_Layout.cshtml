      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
@Html.Partial("_Head")
<body>
    @{
        var isLoggedIn = ViewContext.HttpContext.Session.GetString("NhanVien") != null;
       

    }

<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->
            @Html.Partial("_Aside")
        <!-- / Menu -->
        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->
             @Html.Partial("_Nav")

                @RenderBody()

        </div>
    </div>

    <div class="layout-overlay layout-menu-toggle"></div>
       
</div>
<script>
    function checkLogin() {
        var isLoggedIn = @Html.Raw(isLoggedIn.ToString().ToLower());         
        if (!isLoggedIn) {
            alert('Bạn Cần Đăng Nhập Để Thực Hiện Chức Năng Này');
            return false;
        }         
        return true;

    }
        function checkRole() {
            var role = '@ViewContext.HttpContext.Session.GetString("NhanVienRole")';

            if (role !== 'QL') {
                alert('Bạn Không Có Quyền Thực Hiện Chức Năng Này');
                return false;
            }
            return true;
        }
        function checkLoginAndRole() {
            // Kiểm tra đăng nhập
            if (!checkLogin()) {
                return false;
            }

            // Kiểm tra quyền
            if (!checkRole()) {
                return false;
            }

            return true;
        }
</script>


    <script src="/Admin/assets/vendor/libs/jquery/jquery.js"></script>
