@{
    ViewData["Title"] = "Xác Minh Mã";
    var email = TempData["Email"] as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 mb-5">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-success text-white">
                    <h3>Xác Minh Mã</h3>
                </div>
                <div class="card-body">
                    <p class="text-center mb-4">Chúng tôi đã gửi mã xác thực đến <strong>@email</strong>.</p>
                    <form asp-action="VerifyCode" method="post">
                        <div class="form-group mb-3">
                            <label for="code" class="form-label">Nhập mã xác thực</label>
                            <input type="text"
                                   name="code"
                                   id="code"
                                   class="form-control"
                                   placeholder="Nhập mã xác thực"
                                   required />
                        </div>
                        <input type="hidden" name="email" value="@email" />
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                Xác minh mã
                            </button>
                        </div>
                    </form>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="card-footer text-danger text-center">
                        @Html.ValidationSummary()
                    </div>
                }
            </div>
        </div>
    </div>
</div>
